<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayStockInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="10sp">
                    <TextView
                        android:id="@+id/ticker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Stock Name"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#999899"
                        android:textSize="15sp"
                        android:text="Company Name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="10sp">
                    <TextView
                        android:id="@+id/lastPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$100.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <ImageView
                            android:id="@+id/trend"
                            android:layout_width="17sp"
                            android:layout_height="17sp"
                            android:layout_marginRight="3sp"/>
                        <TextView
                            android:id="@+id/change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$100.00"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="420sp"
                android:layout_weight="1" />
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.google.android.material.tabs.TabItem
                        android:icon="@drawable/ic_time"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>
            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portfolio"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp">
                    <TableRow>
                        <TextView
                            android:text="Shares Owned:"
                            android:textColor="@color/black"
                            android:padding="3dip"/>
                        <TextView
                            android:id="@+id/sharesOwned"
                            android:text="0"
                            android:textColor="@color/black"
                            android:padding="3dip"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Avg. Cost/Share:"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/avgCost"
                            android:text="$0.00"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Total Cost:"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/totalCost"
                            android:text="$0.00"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Change:"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/portfolioChange"
                            android:text="$0.00"
                            android:padding="3dip" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Market Value:"
                            android:textColor="@color/black"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/marketValue"
                            android:text="$0.00"
                            android:padding="3dip" />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:id="@+id/trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trade"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5sp">
                <TableRow
                    android:gravity="center">
                    <TextView
                        android:text="Open Price:"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/openPirce"
                        android:text="$0.00"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:text="High Price:"
                        android:padding="3dip"
                        android:layout_marginStart="50sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/highPirce"
                        android:text="$0.00"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:gravity="center">
                    <TextView
                        android:text="Low Price:"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/lowPirce"
                        android:text="$0.00"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:text="Prev. Close:"
                        android:padding="3dip"
                        android:layout_marginStart="50sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/prevClose"
                        android:text="$0.00"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginEnd="20sp">
                <TableRow>
                    <TextView
                        android:text="IPO Start Date"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/ipoStartDate"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:layout_marginStart="20sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Industry"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/industry"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:layout_marginStart="20sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Webpage"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/webpage"
                        android:padding="3dip"
                        android:textColor="@color/blue"
                        android:layout_marginStart="20sp"
                        android:onClick="webpageOnClick"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Company Peers"
                        android:padding="3dip"
                        android:textColor="@color/black"/>
                    <HorizontalScrollView
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/myScrollView"
                        android:layout_marginStart="20sp">
                        <LinearLayout
                            android:id="@+id/companyPeers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>